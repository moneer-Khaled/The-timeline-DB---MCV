<!DOCTYPE html>
<html lang="en">
<head> 
  <%- include("head") %>
</head>
<body>
  <%- include("header") %>
  <div class="container">
    

      <h1>Post a message</h1>
    
    

    <form method="post" action="/Add">
      <input type="text" name="post" required minlength="25">
      <button type="submit" class="post-btn">Post a message</button>
    </form>

    </div>

    <div>

      <a href="/seemore" >See More</a>
      <% if (posts.length>0) { %>
        <% posts.forEach((item) => { %>
          <h4><%= item.post %></h4>
            
            
          
           
            

        <% }) } %>
    </div>
</body>
</html>
